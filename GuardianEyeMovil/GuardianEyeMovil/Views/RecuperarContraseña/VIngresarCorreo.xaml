<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuardianEyeMovil.Views.RecuperarContraseña.VIngresarCorreo">
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="#141414">

            <StackLayout Margin="30,10,30,0">
                <Label Text="Recuperar tu cuenta" TextColor="White" FontSize="20" FontAttributes="Bold"/>
                <Label Text="Ingresa tu correo electronico para enviarte la confirmacion de cambio de contraseña." TextColor="White" FontSize="17" Margin="0,0,0,0"/>
            </StackLayout>

            <Frame Margin="20,0,20,0" CornerRadius="20" BackgroundColor="#141414">

                <StackLayout>
                    <Label Text="Correo Electrónico:" TextColor="#1da1f2" FontAttributes="Bold" FontSize="15"/>
                    <Entry Placeholder="Ingresa tu correo electronico" TextColor="White" PlaceholderColor="White" FontSize="15"/>

                    <Button Text="Enviar" BackgroundColor="#064686" TextColor="White" CornerRadius="30" Margin="30,20,30,0" Command="{Binding IrCambioContraseñaCommand}"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>